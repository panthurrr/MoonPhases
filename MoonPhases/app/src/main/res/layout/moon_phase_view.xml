<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/img_moon_phase"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/ic_first_quarter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_day_month"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="29"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_moon_phase"
        app:layout_constraintStart_toStartOf="@+id/img_moon_phase"
        app:layout_constraintTop_toBottomOf="@+id/img_moon_phase" />


</androidx.constraintlayout.widget.ConstraintLayout>